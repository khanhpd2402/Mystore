@page
@model MyStore.Pages.DeleteStaffModel
@{
}

<h2>Delete Staff</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Staff.Name
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Model.Staff.Role
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Staff.StaffId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="ListStaff" class="btn btn-secondary">Cancel</a>
    </form>
</div>